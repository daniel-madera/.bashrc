#!/bin/bash
#
# Usage: audio [up|down|mute|list-devices|change-device {index}]
#
# Requirements: pulsaudio

case "$1" in
up)
	pactl set-sink-volume @DEFAULT_SINK@ +10%
	;;
down)
	pactl set-sink-volume @DEFAULT_SINK@ -10%
	;;
mute)
	pactl set-sink-mute @DEFAULT_SINK@ toggle
	;;
list-devices)
	pacmd list-sources | grep -e 'index:' -e device.string -e device.description -e alsa.mixer_name -e 'name:' -e volume
	;;
change-device)
	# temporary use
	index=$2
	pacmd set-default-source $index
	;;
*)
	echo "Usage: audio [up|down|mute|list-devices|change-device {index}]"
	exit 1
esac
