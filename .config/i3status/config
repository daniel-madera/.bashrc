general {
	output_format = "i3bar"
	colors = true
	interval = 1
}

order += "wireless wlp2s0"
order += "ethernet _first_"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "volume master"
order += "battery 1"
order += "tztime local"

tztime local {
	format = "%Y-%m-%d %a %H:%M:%S %z"
	timezone = "Europe/Prague"
}

battery 1 {
	format = "%status %percentage (%remaining) %consumption"
	format_down = "no battery"
	status_chr = "AC"
	status_bat = "BAT"
	status_unk = "UNK"
	status_full = "FULL"
	integer_battery_capacity = true
	low_threshold = 30
	threshold_type = "time"
	hide_seconds = true
}

volume master {
        format = "♪:%volume"
        format_muted = "♪:(%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
	format = "CPU %usage"
}

disk "/" {
	format = "/: %avail"
	low_threshold = 2
	threshold_type = "gbytes_avail"
}

disk "/home" {
	format = "/home: %avail"
	low_threshold = 10
	threshold_type = "gbytes_avail"
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
  	format_down = "E: down"
	color_bad = "#ffffff"
}

wireless wlp2s0 {
	format_up = "W: %ip (%essid %quality %bitrate)"
  	format_down = "W: down"
	color_bad = "#ffffff"
}

